
<link href="~/Assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />


@model List<ModelEntity.Miembro>


@{
                /**/

                ViewBag.Title = "BuscarPorCodigo";
                Layout = null;
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {

        $("#tbcliente tbody tr").dblclick(function () {
            var Miembro = {};
            var n, a,m;
            a = Miembro.RutMiembro = $(this).children().eq('0').text();
            b = Miembro.NombreCompletoMiembro = $(this).children().eq('1').text();
            c = Miembro.Unidad = $(this).children().eq('2').text();
            d = Miembro.TipoMiembro = $(this).children().eq('3').text();
            console.info(a, n,m);
            window.opener.obtenerMiembro(Miembro);
            window.close();
        });
    });
</script>

<div class="panel panel-default">
    <div class="panel-heading">Buscar Polizas</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <h2 style="text-align:center; font-family:Arial; font-weight:700;">Buscar Poliza por:</h2>
                <fieldset>
                    <div class="row" style="padding-bottom:8px;">
                        <div class="form-group col-md-3">
                            @*@Html.Label(model => model.NroPolizaFocalizado, new { @class = "control-label col-md-4" })*@
                            @Html.Label("Nro. Poliza", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtnombre", null, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>

            <input type="submit" value="Buscar" />
        }
    </div>
</div>

<table class="table table-striped" id="tbcliente">

    <thead>
        <tr>
            <th>RUT</th>
            <th>Nombre</th>
            <th>Nombre</th>
            <th>Tipo Integrante</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objMiembro in Model)
        {
            <tr>
                <td>@objMiembro.RutMiembro</td>
                <td>@objMiembro.NombreCompletoMiembro</td>
                <td>@objMiembro.UnidadMiembro</td>
                <td>@objMiembro.TipoMiembro</td>

            </tr>
        }
    </tbody>
</table>
<script src="~/Assets/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Assets/jquery/jquery.min.js"></script>